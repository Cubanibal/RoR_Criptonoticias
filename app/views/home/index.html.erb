<% @precios["DISPLAY"] %>



<table class="table table-responsive table-striped table-hover table-bordered">
  <thead class="table-dark">
    <tr>
      <th scope="col">S√çMBOLO</th>
      <th scope="col">PRECIO</th>
      <th scope="col">V+ALTO(24H)</th>
      <th scope="col">V+BAJO(24H)</th>
      <th scope="col">MarketCap</th>
    </tr>
  </thead>
  <tbody>
  	<% @precios["DISPLAY"].each do |clave, valor| %>
    <tr>
      <th scope="row"><%= clave %></th>
      <td><%= valor["EUR"]["PRICE"] %></td>
      <td><%= valor["EUR"]["HIGHDAY"] %></td>
      <td><%= valor["EUR"]["LOWDAY"] %></td>
      <td><%= valor["EUR"]["MKTCAP"] %></td>
    </tr>
    <% end %>
  </tbody>
</table>



<br/><br/>
<div class="container">
	<div class="row">
		<% for x in @news["Data"] %>
		  	<div class="col-sm" >
			  	<div class="card" style="width: 18rem;">
				  <img src="<%= x["imageurl"] %>" class="card-img-top" alt="<%= x["source"] %>">
				  <div class="card-body">
				    <h5 class="card-title"><%= x["title"] %></h5>
				    <p class="card-text"><%= x["body"] %></p>
				    <a href="<%= x["url"] %>" class="btn btn-primary">Leer mas ...</a>
				  </div>
				</div>
				<br/>
			</div>

		<% end %>
	</div>
</div>